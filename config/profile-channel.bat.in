@echo OFF

setlocal EnableDelayedExpansion

SET i=%1

SET PerformanceToolsPath="@VSPATH@\..\..\Team Tools\Performance Tools"

SET RESULTSDIR=@CMAKE_BINARY_DIR@\ChannelTestResults

%PerformanceToolsPath%\vsperf.exe /launch:m2etis_channel_tester.exe /file:%RESULTSDIR%\Config_!i!_Measurement.vspx /samplinginterval:0.1
													
:loop
tasklist /fi "imagename eq VSPerf.exe" |find ":" > nul
if errorlevel 1 goto loop

%PerformanceToolsPath%\vsperfreport %RESULTSDIR%\Config_!i!_Measurement.vspx /Summary:CallTree /SymbolPath:%buildConfig% /PackSymbols

xcopy /F "Config_!i!_Measurement_CallTreeSummary.csv" "%RESULTSDIR%\Config_!i!_Measurement_CallTreeSummary.csv*"

@CMAKE_BINARY_DIR@\dist\csvToDotConverter.exe "%RESULTSDIR%\Config_!i!_Measurement_CallTreeSummary.csv" "%RESULTSDIR%\Config_!i!_Measurement_CallTreeSummary.dot"
dot -Tpdf "%RESULTSDIR%\Config_!i!_Measurement_CallTreeSummary.dot" > "%RESULTSDIR%\Config_!i!_Measurement_CallTreeSummary.pdf"
